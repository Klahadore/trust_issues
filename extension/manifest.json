{
  "manifest_version": 3,
  "name": "Terms Analyzer",
  "version": "1.0",
  "permissions": ["activeTab", "tabs", "webNavigation", "scripting"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
